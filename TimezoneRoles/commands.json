{
    "$schema": "https://raw.githubusercontent.com/Romejanic/slasher/master/schema.json",

    "settz": {
        "description": "Set user's timezone",
        "options": {
            "timezone": {
                "description": "Timezone to set to",
                "type": "string",
                "required": true
            }
        }
    },
    "removetz": {
        "description": "Remove timezone from user",
        "options": {
            "timezone" : {
                "description": "Timezone to remove",
                "type": "string",
                "required": true
            }
        }
    },
    "cleartz": {
        "description": "Clears all timezones from user"
    }
}